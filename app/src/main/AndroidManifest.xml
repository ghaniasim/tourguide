<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.tourguide">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ContentActivity"
            android:label="Contents"
            android:screenOrientation="portrait"
            />
        <activity android:name=".AttractionsActivity"
            android:label="List of Attractions"
            android:parentActivityName=".ContentActivity"/>
        <activity android:name=".PlacesActivity"
            android:label="List of Places"
            android:parentActivityName=".ContentActivity"/>
        <activity android:name=".FoodActivity"
            android:label="List of Food"
            android:parentActivityName=".ContentActivity"/>
        <activity android:name=".SportsActivity"
            android:label="List of Sports"
            android:parentActivityName=".ContentActivity"/>
        <activity android:name=".DescriptionActivity"
            android:label="Description"
            android:parentActivityName=".ContentActivity">
        </activity>
    </application>

</manifest>